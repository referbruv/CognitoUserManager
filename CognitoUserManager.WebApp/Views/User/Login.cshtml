@model CognitoUserManager.Contracts.DTO.UserLoginModel

<div class="row">
    <div class="col-md-6"></div>
    <div class="col-md-6">
        <div class="col-md-12">
            <h1>Hello There!</h1>
        </div>
        <div class="col-md-12">
            <form method="POST">
                <div class="form-group">
                    <label asp-for="EmailAddress" class="form-label">EmailAddress</label>
                    <input class="form-control" asp-for="EmailAddress" required>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input type="password" class="form-control" asp-for="Password" required>
                </div>
                <button class="btn btn-primary" type="submit">Login</button>
            </form>
        </div>
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <a asp-action="Signup">Signup</a>
                </div>
                <div class="col-md-6">
                    <a asp-action="ForgotPassword">Forgot Password?</a>
                </div>
            </div>
        </div>
    </div>
</div>