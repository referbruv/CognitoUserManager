@model CognitoUserManager.Contracts.DTO.ResetPasswordModel

@{
    var userId = TempData["UserId"];
    var email = TempData["EmailAddress"];
}

<div class="row">
    <div class="col-md-6"></div>
    <div class="col-md-6">
        <div class="col-md-12">
            <form method="post">
                <input type="hidden" asp-for="UserId" value="@userId" />
                <div class="form-group">
                    <label asp-for="EmailAddress" class="form-label">EmailAddress</label>
                    <input class="form-control" asp-for="EmailAddress" value="@email" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmationCode" class="form-label">ConfirmationCode</label>
                    <input class="form-control" asp-for="ConfirmationCode" required />
                </div>
                <div class="form-group">
                    <label asp-for="NewPassword">NewPassword</label>
                    <input type="password" class="form-control" asp-for="NewPassword" required />
                </div>
                <button class="btn btn-primary" type="submit">Reset Password</button>
            </form>
        </div>
    </div>
</div>