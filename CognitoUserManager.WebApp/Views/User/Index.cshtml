@model CognitoUserManager.Contracts.DTO.UpdateProfileModel

<div class="row">
    <div class="col-md-6">
        <div class="col-md-12">
            <form method="POST">
                <input type="hidden" value="@Model.UserId" asp-for="UserId" />
                <div class="form-group">
                    <label asp-for="GivenName" class="form-label">GivenName</label>
                    <input class="form-control" asp-for="GivenName" required>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="form-label">PhoneNumber</label>
                    <input class="form-control" asp-for="PhoneNumber" required>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="form-label">Address</label>
                    <input class="form-control" asp-for="Address" required>
                </div>
                <div class="form-group">
                    <label asp-for="State" class="form-label">State</label>
                    <input class="form-control" asp-for="State" required>
                </div>
                <div class="form-group">
                    <label asp-for="Country" class="form-label">Country</label>
                    <input class="form-control" asp-for="Country" required>
                </div>
                <div class="form-group">
                    <label asp-for="Pincode" class="form-label">Pincode</label>
                    <input class="form-control" asp-for="Pincode" required>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="form-label">Gender</label>
                    <select asp-for="Gender" class="form-control">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                        <option value="NA">Don't wanna say</option>
                    </select>
                </div>
                <button class="btn btn-primary" type="submit">Update</button>
            </form>
        </div>
    </div>
</div>